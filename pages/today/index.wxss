text{
    font-family: 'siyuanhei';
    text-shadow: -1rpx 0rpx 10rpx rgb(244,243,241),1rpx 0rpx 10rpx rgb(244,243,241);
}

.i-weather-font {
    font-family: 'weather-font' !important;
}

.height {
    height: 100%;
}

.background {
    background-image: url('https://s14.postimg.cc/ksvigrmip/80lb-_Smooth-_White.jpg');
    background-size: 100% 100%;
    width: 100%;
    height: 100%;
    position: fixed;

}

.weather-bg {
    position:absolute;
    width:100%;
    height:100%;
    z-index: -1;
    opacity: 0.9;
    overflow: hidden;
}

.weather-bg-img {
    width:100%;
    height: 100%;
}

.weather-bg-transit {
    width: 100%;
    height: 100%;
    background: linear-gradient(rgba(244,243,241,0), rgba(244,243,241,1));
    position: absolute;
    top: 0;
}

.local {
    padding: 40rpx;
    text-align: center;
    font-size: 40rpx;
    line-height: 1.2;
}

.general {
    display: flex;
    justify-content: space-between;
    margin: 0 40rpx;
    align-items: center;
}

.tip-icon {
    margin-right: 10rpx;
    vertical-align: bottom;
    font-size: 55rpx;
}
.tip-main-icon {
    vertical-align: bottom;
    font-size: 150rpx;
}
.week-forecast {
    white-space: nowrap;
    display: flex;
    margin-top:40rpx;
}
.week-forecast .item {
    display: inline-block;
    border-left: 1rpx solid gray;
    padding:0 10px;
    text-align:center;
}
.week-forecast .item:nth-of-type(1) {
    border-left: none;
}

.today-temperature {
    text-align: center;
    font-size: 300rpx;
    line-height: 1;
}

.today-forecast {
    text-align: center;
    font-size: 30rpx;
}
.precipitation-view{
    margin: 25rpx auto;
    width: 700rpx;
    height: 250rpx;
    overflow: hidden;
    position: relative;
}
.precipitation-canvas{
    margin: 25rpx auto;
    width: 700rpx;
    height: 250rpx;
    overflow: hidden;
    position: fixed;
}

